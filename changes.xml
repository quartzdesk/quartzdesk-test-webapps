    <!--
      Action type can be either of:
        add
        fix
        remove
        update
    -->

    <release version="1.3.0" date="2013-11-01">
      <action type="add">
        First version of consolidated QuartzDesk test webapps covering all supported Quartz versions.
      </action>
    </release>


    <release version="1.4.0" date="2013-12-29">
      <action type="add">
        Updated test apps for QuartzDesk 1.4.0.
      </action>
    </release>


    <release version="1.5.0" date="2014-03-25">
      <action type="add">
        Updated test apps for QuartzDesk 1.5.0.
      </action>
    </release>


    <release version="1.6.0" date="2014-08-22">
      <action type="update">
        Updated to use QuartzDesk API 1.6.0.
      </action>

      <action type="fix">
        Added slf4j and log4j module exclusions for JBoss.
      </action>
    </release>


    <release version="1.7.0" date="2014-11-16">
